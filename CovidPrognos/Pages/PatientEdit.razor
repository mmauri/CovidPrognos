@using CovidPrognos.Models

<RadzenTemplateForm Data="@Patient">
    <div class="row">
        <div class="col-md-6">
            <RadzenFieldset Text="General">
                <div class="row">
                    <div class="col-md-4 align-items-center d-flex">
                        <RadzenLabel Text="Patient Id" />
                    </div>
                    <div class="col-md-8">
                        <RadzenTextBox style="width: 100%;" Name="PatientId" @bind-Value="Patient.PatientId"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 align-items-center d-flex">
                        <RadzenLabel Text="Admission Date" />
                    </div>
                    <div class="col-md-8">
                        <RadzenDatePicker style="width: 100%;" Name="AdmissionDate" @bind-Value="Patient.AdmissionDate" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 align-items-center d-flex">
                        <RadzenLabel Text="Gender" />
                    </div>
                    <div class="col-md-8">
                        <RadzenSelectBar @bind-Value=@Patient.IsMale TValue="bool">
                            <Items>
                                <RadzenSelectBarItem Text="Male" Value="true" />
                                <RadzenSelectBarItem Text="Female" Value="false" />
                            </Items>
                        </RadzenSelectBar>
                    </div>
                </div>
            </RadzenFieldset>
            <RadzenFieldset Text="Admission date tests">
                <div class="row">
                    <div class="col-md-4 align-items-center d-flex">
                        <RadzenLabel Text="Sat.O2" />
                    </div>
                    <div class="col-md-8">
                        <RadzenSelectBar @bind-Value=@Patient.SaO2Below90PercAtAdmission TValue="bool">
                            <Items>
                                <RadzenSelectBarItem Text="<90%" Value="true" />
                                <RadzenSelectBarItem Text=">=90%" Value="false" />
                            </Items>
                        </RadzenSelectBar>
                    </div>
                </div>
                
            </RadzenFieldset>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-12 d-flex align-items-end justify-content-center" style="margin-top: 16px;">
            <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" />
            <RadzenButton ButtonStyle="ButtonStyle.Light" Icon="cancel" style="display: inline-block; margin-left: 10px;" Text="Cancel" Click="@Cancel" />
        </div>
    </div>
</RadzenTemplateForm>

